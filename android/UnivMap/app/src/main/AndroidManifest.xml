<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cherrierlaoussing.univmap">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UnivMap">
        <activity android:name=".LegalNoticeActivity"
            android:parentActivityName=".SettingsActivity" />
        <activity
            android:name=".UnivMapActivity"
            android:parentActivityName=".SettingsActivity" />
        <activity
            android:name=".ConfidentialityActivity"
            android:parentActivityName=".SettingsActivity" />
        <activity
            android:name=".LanguageActivity"
            android:parentActivityName=".SettingsActivity" />
        <activity
            android:name=".AppearanceActivity"
            android:parentActivityName=".SettingsActivity" />
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/Theme.UnivMap.NoActionBar" />
        <activity
            android:name=".CalendarActivity"
            android:theme="@style/Theme.UnivMap.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.UnivMap.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>